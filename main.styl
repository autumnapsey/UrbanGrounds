// BASIC STYLING

ul
	list-style none
	text-align left

header
	background-image url("../images/honey_im_subtle.png")
	text-align center
	margin-left 9%
	margin-right 9%
	padding-top 2%
	padding-bottom 2%
	padding-left 2%
	padding-right 2%
	border-bottom 20px solid #C0E6DE

#logo
	width 75%

h2
	margin-left 4%
	margin-top 2%
	font-family robotoThin

body
	font-family robotoThin

// TEXT STYLING

.boldText
	font-weight: bold

@font-face
	font-family roboto
	src url(../fonts/Roboto-Black.ttf)

@font-face
	font-family robotoThin
	src url(../fonts/Roboto-Thin.ttf)

@font-face
	font-family robotoBold
	src url(../fonts/Roboto-Bold.ttf)

@font-face
	font-family robotoCondensed
