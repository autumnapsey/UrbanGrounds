body
	background-image url("../images/honey_im_subtle.png")

.rioGlamour
	font-family rioGlamour
	letter-spacing .25em


ul
	list-style none
	text-align left

header
	background-color white
	margin 0px
	padding 0px
	text-align center

#logo
	width 60%

h2
	margin-left 4%
	margin-top 2%

//Text Styling

.boldText
	font-weight: bold

@fontface
	font-family rioGlamour
	src url(../fonts/RioGlamour2.otf)

//Map Styling

.neighbourhoodContainer
	flex 1
	color white
	text-shadow 10px
	margin-top 5%
	//margin-left 10%
	//margin-right 10%
	text-align center
	//max-width 80%
	width 100%
	//background-color: red
	//position absolute

.map
	height auto
	width 100%

.downtownList
	background-color #d9d9d9
	top 10%
	left 30%
	opacity 0.85
	color black
	height 24%
	width 34%
	padding 3.2%
	border-radius 20px
	position absolute
	left 30%
	top 170%

@media (max-width: 875px) {
	.neighbourhoodContainer	{
		max-width: 100%;
		margin-left: 0px;
	}
}

@media (max-width: 690px) {
	.downtownMap, .midtownMap, .corktownMap, .westVillageMap, .newCenterMap, .easternMarketMap, .rosedaleMap, .hamtramckMap {
		position: static;
	}
}



//Interest Icon Styling

.iconContainer
	display flex
	display -webkit-flex
	flex-direction row
	-webkit-flex-direction row
	justify-content space-around
	-webkit-justify-content space-around
	margin-left 6%
	margin-right 6%
	margin-top 8%
	margin-bottom 13%

.icon
	height 100px
	height auto


