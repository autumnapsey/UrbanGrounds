// MAP STYLING

.neighbourhoodContainer

	flex 2
	color black
	text-shadow 10px
	margin-top 5%
	//margin-left 10%
	//margin-right 10%
	text-align center
	//max-width 80%
	width 100%
	//position absolute

.map
	height auto
	width 100%

.downtownList
	background-color #d9d9d9
	top 10%
	left 30%
	opacity 0.90
	color black
	height 24%
	width 15%
	padding 3.2%
	border-radius 20px
	position absolute
	left 30%
	top 170%
	list-style none

@media (max-width: 875px) {
	.neighbourhoodContainer	{
		max-width: 100%;
		margin-left: 0px;
	}
}

@media (max-width: 690px) {
	.downtownMap, .midtownMap, .corktownMap, .westVillageMap, .newCenterMap, .easternMarketMap, .rosedaleMap, .hamtramckMap {
		position: static;
	}
}


