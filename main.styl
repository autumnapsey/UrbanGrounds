// NEIGHBOURHOOD STYLING


.neighbourhoodIconContainer
	display flex
	display -webkit-flex
	flex-direction row
	-webkit-flex-direction row
	justify-content space-around
	-webkit-justify-content space-around
	margin-top 10%
	margin-left 6%
	margin-right 6%

.neighbourhoodIcon
	max-width 15%
	max-height 15%
	width 100%
	height 100%
