	max-height 15%
	width 100%
	height 100%
	border-radius 50%
	background-color #f28d5f


.neighbourhoodPickerHeader
	margin-bottom 10%

.mapContainer
	display flex
	flex-direction row


#corktown:hover + .mapContainer
	background-color: yellow

.map
