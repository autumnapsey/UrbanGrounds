body
	background-image url("../images/honey_im_subtle.png")
	font-family arial


ul
	list-style none
	text-align left

header
	background-color white
	margin 0px
	padding 0px
	text-align center

#logo
	width 60%

//Text Styling

.boldText
	font-weight: bold

//Flexbox Styling

.neighbourhoodContainer
	color white
	margin-left 10%
	margin-right 10%
	text-align center
	max-width 80%
	width 100%
	background-color: red
	position absolute

.map
	height auto
	width 80%
	justify-content center

.downtownMap
	position absolute
	top 60%
	left 55%

.downtownList
	position absolute
	width 40%
	height 40%
	background-color goldenrod
	opacity 0.6
	top 20%
	left 20%

.midtownMap
	position absolute
	top 50%
	left 49%

.corktownMap
	position absolute
	top 58%
	left 42%

.westVillageMap
	position absolute
	top 54%
	left 67%

.newCenterMap
	position absolute
	top 40%
	left 42%

.easternMarketMap
	position absolute
	top 49%
	left 60%

.rosedaleMap
	position absolute
	top 15%
	left 20%

.hamtramckMap
	position absolute
	top 30%
	left 55%

@media (max-width: 875px) {
	.neighbourhoodContainer	{
		max-width: 100%;
		margin-left: 0px;
	}
}

@media (max-width: 690px) {
	.downtownMap, .midtownMap, .corktownMap, .westVillageMap, .newCenterMap, .easternMarketMap, .rosedaleMap, .hamtramckMap {
		position: static;
	}
}
